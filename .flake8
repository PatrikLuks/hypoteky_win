[flake8]
# Flake8 configuration pro hypoteky aplikaci
max-line-length = 88
exclude = .git,__pycache__,.venv,migrations,backup_workspace_*,*.egg
ignore = E203,W503,E501
per-file-ignores =
    __init__.py:F401
    manage.py:F401

[pycodestyle]
max-line-length = 88
ignore = E203,W503,E501

[pydocstyle]
# docstring style
inherit = false
match = (?!test_).*\.py
match-dir = (?!tests).*
